.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name

      %ul.side-header__box__menu
        %li.side-header__box__menu__edit-user
          = link_to new_group_path do
            %i.fa.fa-edit
        %li.side-header__box__menu__new-group
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog
  .grouplist
    - current_user.groups.each do |group|
      = link_to 'http://localhost:3000/' do
        .grouplist--group
          .grouplist--group__group-name
            = group.name
          .grouplist--group__latest-message
            メッセージはまだありません。
